    <!-- QR Code Library -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>

    <script>
        let qrDataURL = null;

        // Auto-fill with example or localhost
        window.addEventListener('load', () => {
            const urlInput = document.getElementById('urlInput');
            const currentHost = window.location.host;
            if (currentHost.includes('localhost') || currentHost.includes('127.0.0.1')) {
                urlInput.value = `${window.location.protocol}//${currentHost}/christmas_article.html`;
            }
        });

        function generateQR() {
            const urlInput = document.getElementById('urlInput');
            const url = urlInput.value.trim();

            if (!url) {
                alert('âŒ Please enter a URL first!');
                return;
            }

            // Validate URL format
            try {
                new URL(url);
            } catch (e) {
                alert('âŒ Please enter a valid URL (e.g., https://example.com/christmas_article.html)');
                return;
            }

            const canvas = document.getElementById('qrCanvas');
            const qrDisplay = document.getElementById('qrDisplay');
            const qrImage = document.getElementById('qrImage');
            const successMsg = document.getElementById('successMsg');
            const downloadBtn = document.getElementById('downloadBtn');

            // Generate QR Code with high quality settings
            QRCode.toCanvas(canvas, url, {
                width: 512,
                margin: 2,
                color: {
                    dark: '#000000',
                    light: '#FFFFFF'
                },
                errorCorrectionLevel: 'H'
            }, function (error) {
                if (error) {
                    console.error(error);
                    alert('âŒ Failed to generate QR code');
                    return;
                }

                // Convert canvas to data URL
                qrDataURL = canvas.toDataURL('image/png');
                
                // Display QR code
                qrImage.src = qrDataURL;
                qrDisplay.classList.remove('hidden');
                
                // Show success message
                successMsg.classList.add('show');
                setTimeout(() => {
                    successMsg.classList.remove('show');
                }, 3000);

                // Enable download button
                downloadBtn.disabled = false;

                console.log('âœ“ QR Code generated successfully');
            });
        }

        function downloadQR() {
            if (!qrDataURL) {
                alert('âŒ Please generate a QR code first!');
                return;
            }

            // Create download link
            const link = document.createElement('a');
            link.download = 'qr_code.png';
            link.href = qrDataURL;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            console.log('âœ“ QR Code downloaded as qr_code.png');
        }

        // Allow Enter key to generate
        document.getElementById('urlInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateQR();
            }
        });
    </script>
